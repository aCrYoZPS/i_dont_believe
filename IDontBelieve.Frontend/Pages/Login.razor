@page "/login"
@using System.ComponentModel.DataAnnotations
@using IDontBelieve.Frontend.Services
@inject IAuthService AuthService
@inject NavigationManager Navigation

<PageTitle>Login now</PageTitle>

<div class="form-container">
    <h1 class="form-header">Log In</h1>

    <EditForm Model="loginModel" OnValidSubmit="HandleValidSubmit" class="registration-form">
        <DataAnnotationsValidator/>
        <ValidationSummary/>

        <div>
            <label>Email:</label>
            <InputText @bind-Value="loginModel.Email" type="email" spellcheck="false"/>
            <ValidationMessage For="@(() => loginModel.Email)"/>
        </div>

        <div>
            <label>Password:</label>
            <InputText @bind-Value="loginModel.Password" type="password" spellcheck="false"/>
            <ValidationMessage For="@(() => loginModel.Password)"/>
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger">@errorMessage</div>
        }

        <button type="submit" disabled="@isLoading">@(isLoading ? "Logging in..." : "Log In")</button>
    </EditForm>

    <p>Don't have an account? <a href="/register">Register here</a></p>
</div>

@code {
    private LoginModel loginModel = new LoginModel();
    private string errorMessage = string.Empty;
    private bool isLoading = false;

    private async void HandleValidSubmit()
    {
        isLoading = true;
        errorMessage = string.Empty;
        StateHasChanged();

        try
        {
            var result = await AuthService.LoginAsync(new Core.DTOs.Auth.LoginRequest
            {
                Email = loginModel.Email!,
                Password = loginModel.Password!
            });

            if (result != null)
            {
                Navigation.NavigateTo("/profile", true);
            }
            else
            {
                errorMessage = "Invalid login attempt";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "An error occurred during login";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    public class LoginModel
    {
        [Required(ErrorMessage = "Email is required.")]
        [EmailAddress(ErrorMessage = "Invalid email format.")]
        public string? Email { get; set; }

        [Required(ErrorMessage = "Password is required.")]
        public string? Password { get; set; }
    }
}