@layout RegistrationLayout
@page "/login"
@using System.ComponentModel.DataAnnotations

<PageTitle>Login now</PageTitle>

<div class="form-container">
    <h1 class="form-header">Log In</h1>

    <EditForm Model="loginModel" OnValidSubmit="HandleValidSubmit" class="registration-form">
        <DataAnnotationsValidator/>

        <div>
            <label>Email:</label>
            <InputText @bind-Value="loginModel.Email" type="email" spellcheck="false"/>
            <ValidationMessage For="@(() => loginModel.Email)"/>
        </div>

        <div>
            <label>Password:</label>
            <InputText @bind-Value="loginModel.Password" type="password" spellcheck="false"/>
            <ValidationMessage For="@(() => loginModel.Password)"/>
        </div>

        <button type="submit">Log In</button>
    </EditForm>

    @code {
        private LoginModel loginModel = new LoginModel();

        private void HandleValidSubmit()
        {
            // Handle registration logic here
            // For example, send registrationModel to backend service for processing
        }

        public class LoginModel
        {
            [Required(ErrorMessage = "Email is required.")]
            [EmailAddress(ErrorMessage = "Invalid email format.")]
            public string? Email { get; set; }

            [Required(ErrorMessage = "Password is required.")]
            public string? Password { get; set; }
        }

    }

</div>
