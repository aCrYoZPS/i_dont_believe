@page "/room/{RoomId:int}"
@inject GameHubService GameService
@inject NavigationManager Navigation
@using IDontBelieve.Frontend.Services
@implements IDisposable

<div class="container-fluid mt-4">
    @if (GameService.CurrentRoom == null)
    {
        <p>Loading Room Details...</p>
    }
    else
    {
        <div class="row">

            <!-- LEFT: GAME FIELD -->
            <div class="col-md-8">
                <div class="border rounded p-3 h-100">
                    <h4 class="text-center mb-3">Game Field</h4>

                    @if (GameService.CurrentRoom.Status == "Waiting")
                    {
                        <div class="text-center text-muted">
                            Waiting for game start...
                        </div>
                    }
                    else
                    {
                        <div class="d-flex flex-wrap justify-content-center gap-4">
                            @foreach (var player in GameService.CurrentRoom.Players)
                            {
                                <div class="text-center border rounded p-2 player-slot">
                                    <div class="fw-bold">
                                        @player.Username
                                        @if (player.UserId == userId)
                                        {
                                            <span class="badge bg-info ms-1">You</span>
                                        }
                                    </div>

                                    <div class="mt-2 d-flex justify-content-center gap-1">
                                        @* Cards *@
                                        @* @if (player.UserId == userId) *@
                                        @* { *@
                                        @*     $1$ Open cards for current player #1# *@
                                        @*     @for (int i = 0; i < player.Cards.Count; i++) *@
                                        @*     { *@
                                        @*         <span class="card-open">🂡</span> *@
                                        @*     } *@
                                        @* } *@
                                        @* else *@
                                        @* { *@
                                        @*     $1$ Closed cards for others #1# *@
                                        @*     @for (int i = 0; i < player.Cards.Count; i++) *@
                                        @*     { *@
                                        @*         <span class="card-closed">🂠</span> *@
                                        @*     } *@
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>

            <!-- RIGHT: ROOM INFO -->
            <div class="col-md-4">
                <div class="border rounded p-3 h-100 d-flex flex-column">

                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h5>@GameService.CurrentRoom.Name</h5>
                        <button class="btn btn-danger btn-sm" @onclick="LeaveRoom">
                            Leave
                        </button>
                    </div>

                    <p class="text-muted mb-2">
                        Status: <strong>@GameService.CurrentRoom.Status</strong>
                    </p>

                    <p>
                        Players:
                        <strong>
                            @GameService.CurrentRoom.CurrentPlayerCount /
                            @GameService.CurrentRoom.MaxPlayers
                        </strong>
                    </p>

                    <hr />

                    <h6>Players</h6>
                    <ul class="list-group mb-3">
                        @foreach (var player in GameService.CurrentRoom.Players)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span>
                                    <i class="bi bi-person-circle"></i>
                                    @player.Username
                                </span>

                                @if (player.IsHost)
                                {
                                    <span class="badge bg-warning text-dark">Host</span>
                                }
                            </li>
                        }
                    </ul>

                    <div class="mt-auto">
                        @if (GameService.CurrentRoom.Status == "Waiting"
                             && GameService.CurrentRoom.Players.Any(p => p.UserId == userId && p.IsHost))
                        {
                            <button class="btn btn-success w-100">
                                Start Game
                            </button>
                        }
                        else if (GameService.CurrentRoom.Status != "Waiting")
                        {
                            <div class="alert alert-success text-center mb-0">
                                Game in Progress
                            </div>
                        }
                    </div>

                </div>
            </div>

        </div>
    }
</div>

@code {

    private int userId;

    [Parameter] public int RoomId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        GameService.OnCurrentRoomUpdated += StateHasChanged;

        await GameService.ConnectAsync();
        await GameService.JoinRoomAsync(RoomId);

        userId = await GameService.GetUserId();
    }

    private async Task LeaveRoom()
    {
        await GameService.LeaveRoomAsync(RoomId);
        Navigation.NavigateTo("/lobby");
    }

    public void Dispose()
    {
        GameService.OnCurrentRoomUpdated -= StateHasChanged;
    }
}
