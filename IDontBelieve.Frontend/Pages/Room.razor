@page "/room/{RoomId:int}"
@inject GameHubService GameService
@inject NavigationManager Navigation
@using IDontBelieve.Frontend.Services
@implements IDisposable

<div class="container mt-4">
    @if (GameService.CurrentRoom == null)
    {
        <p>Loading Room Details...</p>
    }
    else
    {
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between">
                <h3>@GameService.CurrentRoom.Name</h3>
                <button class="btn btn-danger btn-sm" @onclick="LeaveRoom">Leave Room</button>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <h5>Players
                            (@GameService.CurrentRoom.CurrentPlayerCount / @GameService.CurrentRoom.MaxPlayers)</h5>

                        <ul class="list-group">
                            @foreach (var player in GameService.CurrentRoom.Players)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>
                                        <i class="bi bi-person-circle"></i> @player.Username
                                        @if (player.UserId == userId)
                                        {
                                            <span class="badge bg-info ms-2">You</span>
                                        }
                                    </span>

                                    @* Visual indicator for host if you have that property in DTO *@
                                    @if (player.IsHost)
                                    {
                                        <span class="badge bg-warning text-dark">Host</span>
                                    }
                                </li>
                            }
                        </ul>
                    </div>

                    <div class="col-md-4 border-start">
                        <h5>Game Controls</h5>
                        <p class="text-muted">Status: <strong>@GameService.CurrentRoom.Status</strong></p>
                      
                        @if (GameService.CurrentRoom.Status == "Waiting")
                        {
                            <button class="btn btn-success w-100 mb-2">Start Game</button>
                        }
                        else
                        {
                            <div class="alert alert-success">Game in Progress</div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {

    private int userId;
    [Parameter]
    public int RoomId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        GameService.OnCurrentRoomUpdated += StateHasChanged;

        // Ensure connected
        await GameService.ConnectAsync();

        // Join the room via SignalR
        await GameService.JoinRoomAsync(RoomId);

        userId = await GameService.GetUserId();
    }

    private async Task LeaveRoom()
    {
        await GameService.LeaveRoomAsync(RoomId);
        Navigation.NavigateTo("/lobby");
    }

    public void Dispose()
    {
        GameService.OnCurrentRoomUpdated -= StateHasChanged;
        // Optional: Leave room automatically if navigating away via browser back button
        // _ = GameService.LeaveRoomAsync(RoomId); 
    }

}