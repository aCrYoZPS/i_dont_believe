@page "/room/{RoomId:int}"
@inject GameHubService GameService
@inject NavigationManager Navigation
@using IDontBelieve.Frontend.Services
@implements IDisposable

<div class="container-fluid mt-4">
    @if (GameService.CurrentRoom == null)
    {
        <p>Loading Room Details...</p>
    }
    else
    {
        <div class="row">

            <!-- LEFT: GAME FIELD -->
            <div class="col-md-8">
                <div class="border rounded p-3 h-100">
                    <h4 class="text-center mb-3">Game Field</h4>

                    @if (GameService.CurrentRoom.Status != "Waiting")
                    {
                        <div class="text-center text-muted">
                            Waiting for game start...
                        </div>
                    }
                    else
                    {
                        <div class="table-wrapper">
                            <div class="opponents-list">
                                @{
                                    var players = GameService.CurrentRoom.Players;
                                    var otherPlayers = players.Where(p => p.UserId != userId).ToList();
                                    var currentPlayer = players.FirstOrDefault(p => p.UserId == userId);
                                    var otherCount = otherPlayers.Count;
                                }
                                @foreach (var player in otherPlayers)
                                {
                                    var isTurning = player.UserId == 6; // GameService.CurrentRoom.CurrentPlayerId;
                                    <div class="opponent-card @(isTurning ? "active-turn" : "")">
                                        @if (isTurning)
                                        {
                                            <div class="turn-label">THINKING...</div>
                                        }
                                        <div class="opponent-name">@player.Username</div>
                                        <div class="opponent-cards-mini">
                                            @for(int c = 0; c < 5; c++) 
                                            {
                                                <span class="mini-card">🂠</span>
                                            }
                                            <span class="count-badge">@player.Cards.Count</span>
                                        </div>
                                    </div>
                                }
                            </div>
            
                            <div class="game-field">
                                <div class="field-label">Game Field</div>
                                <div class="played-cards">
                                </div>
                            </div>
            
                            @if (currentPlayer != null)
                            {
                                var myTurn = currentPlayer.UserId == 6;// GameService.CurrentRoom.CurrentPlayerId;
                                <div class="player-interface @(myTurn ? "my-turn-active" : "")">
                                    @if (myTurn)
                                    {
                                        <div class="turn-label main-label">YOUR TURN</div>
                                    }
                                    <div class="current-player-area">
                                        <div class="player-badge">You: @currentPlayer.Username</div>
                                        <div class="my-cards-flex">
                                            @for (int i = 0; i < 6; i++)
                                            {
                                                var localIndex = i;
                                                <div class="card-ui @(selectedOverlapIndex == localIndex ? "selected" : "")" 
                                                     @onclick="() => SelectCard(localIndex)">
                                                    🂡
                                                </div>
                                            }
                                        </div>
                                    </div>
                                    <div class="controls-column">
                                        <button class="btn-game move" @onclick="HandleMove" disabled="@(selectedOverlapIndex == -1)">
                                            Make a move
                                        </button>
                                        <button class="btn-game believe" @onclick="HandleBelieve">I believe</button>
                                        <button class="btn-game doubt" @onclick="HandleDoubt">I don't believe</button>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>

            <!-- RIGHT: ROOM INFO -->
            <div class="col-md-4">
                <div class="border rounded p-3 h-100 d-flex flex-column">

                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <h5>@GameService.CurrentRoom.Name</h5>
                        
                    </div>

                    <p class="mb-2">
                        Status: <strong>@GameService.CurrentRoom.Status</strong>
                    </p>

                    <p>
                        Players:
                        <strong>
                            @GameService.CurrentRoom.CurrentPlayerCount /
                            @GameService.CurrentRoom.MaxPlayers
                        </strong>
                    </p>
                                        
                    <button class="btn btn-danger btn-sm" @onclick="LeaveRoom">
                        Leave
                    </button>

                    <hr/>

                    <h6>Players</h6>
                    <ul class="list-group mb-3">
                        @foreach (var player in GameService.CurrentRoom.Players)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center m-1">
                                <span>
                                    <i class="bi bi-person-circle"></i>
                                    @player.Username
                                </span>

                                @if (player.IsHost)
                                {
                                    <span class="badge bg-warning text-dark">Host</span>
                                }
                            </li>
                        }
                    </ul>

                    <div class="mt-auto">
                        @if (GameService.CurrentRoom.Status == "Waiting"
                             && GameService.CurrentRoom.Players.Any(p => p.UserId == userId && p.IsHost))
                        {
                            <button class="btn btn-success w-100">
                                Start Game
                            </button>
                        }
                        else if (GameService.CurrentRoom.Status != "Waiting")
                        {
                            <div class="alert alert-success text-center mb-0">
                                Game in Progress
                            </div>
                        }
                    </div>

                </div>
            </div>

        </div>
    }
</div>

@code {

    private int userId;
    private int selectedOverlapIndex = -1;

    [Parameter] public int RoomId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        GameService.OnCurrentRoomUpdated += StateHasChanged;

        await GameService.ConnectAsync();
        await GameService.JoinRoomAsync(RoomId);

        userId = await GameService.GetUserId();
    }

    private async Task LeaveRoom()
    {
        await GameService.LeaveRoomAsync(RoomId);
        Navigation.NavigateTo("/rooms");
    }

    public void Dispose()
    {
        GameService.OnCurrentRoomUpdated -= StateHasChanged;
    }

    private void SelectCard(int index)
    {
        if (selectedOverlapIndex == index)
        {
            selectedOverlapIndex = -1;
        }
        else
        {
            selectedOverlapIndex = index;
        }
    }

    private void HandleMove()
    {
        if (selectedOverlapIndex == -1) return;
    }

    private void HandleBelieve()
    {
        
    }

    private void HandleDoubt()
    {
        
    }
}
